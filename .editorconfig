root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset and indentation for JavaScript files and templates
[*.{js,pug}]
charset = utf-8
indent_style = tab
tab_width = 2

# Set indentation for package.json
[{package.json}]
indent_style = space
indent_size = 2
